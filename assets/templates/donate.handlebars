        </div>

        {{!-- STRIPE --}}
        <div id="stripe">
            <h4 class="mb-3">Payment information</h4>
            <div id="card-element">
                <!--Stripe.js injects the Card Element-->
            </div>
            <button id="submit">
                <div class="spinner hidden" id="spinner"></div>
                <span id="button-text">GIVE NOW</span>
            </button>
        </div>

        <p id="card-error" role="alert"></p>
        <div class="result-message hidden"></div>

        <div id="loading-error" class="hidden">
            <p>An error has occurred. Please reload the page to try again.</p>
        </div>

