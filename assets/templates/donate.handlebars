            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="billing-postal-code">Zip</label>
                        <input type="billing-postal-code" class="form-control" id="billing-postal-code"
                            placeholder="12345" required>
                        <span id="help-billing-postal-code" class="help-block"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="billing-country-code">Country</label>
                        <input type="billing-country-code" class="form-control" id="billing-country-code"
                            placeholder="US" disabled>
                        <span id="help-billing-country-code" class="help-block"></span>
                    </div>
                </div>
            </div>
