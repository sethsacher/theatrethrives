        {{!-- Billing Address --}}
        <div id="donation-billing">
            <h4 class="mb-3">Billing address</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="billing-given-name">First Name</label>
                        <input type="billing-given-name" class="form-control" id="billing-given-name"
                            placeholder="First" required>
                        <span id="help-billing-given-name" class="help-block"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="billing-surname">Last Name</label>
                        <input type="billing-surname" class="form-control" id="billing-surname" placeholder="Last"
                            required>
                        <span id="help-billing-surname" class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
                        <span id="help-email" class="help-block"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="billing-phone">Phone</label>
                        <input type="billing-phone" class="form-control" id="billing-phone" placeholder="123-456-7890"
                            required>
                        <span id="help-billing-phone" class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-group inline-field">
                    <input type="checkbox" id="contact" name="contact" value="true" checked>
                    <label for="contact"> It's
                        okay to share my contact information with the participating theatres
                        of Community Theatre Thrives, and it's okay for those theatres to contact me in the
                        future.</label>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-group">
                    <label for="billing-street-address">Address</label>
                    <input type="billing-street-address" class="form-control" id="billing-street-address"
                        placeholder="123 Street" required>
                    <span id="help-billing-street-address" class="help-block"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-group">
                    <label for="billing-extended-address">Address 2 (Optional)</label>
                    <input type="billing-extended-address" class="form-control" id="billing-extended-address"
                        placeholder="Unit 1">
                    <span id="help-billing-extended-address" class="help-block"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="billing-locality">City</label>
                        <input type="billing-locality" class="form-control" id="billing-locality" placeholder="City"
                            required>
                        <span id="help-billing-locality" class="help-block"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="billing-region">State</label>
